{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
      "builder": "NIXPACKS",
      "buildCommand": "npx nx build website",
      "watchPatterns": [
        "/website"
      ]
    },
    "deploy": {
      "runtime": "V2",
      "numReplicas": 1,
      "startCommand": "npx nx serve website",
      "sleepApplication": false,
      "restartPolicyType": "ON_FAILURE",
      "restartPolicyMaxRetries": 10
    }
  }
